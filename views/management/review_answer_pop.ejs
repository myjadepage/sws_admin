<div class="modal writeAnswer" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">상품평 답변</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <div>
                    <div class="section_head" style="margin-top:0">
                        <h4>상품평 답변</h4>
                    </div>

                    <form name="Frm">
                        <table class="t_form">

                            <colgroup>
                                <col width="130">
                                <col width="*">
                            </colgroup>
                            <caption>답변 등록 폼</caption>
                            <tr>
                                <th>내용</th>
                                <td>
                                    <textarea name="content" rows="5" class="text_input" style="width:98%"></textarea>
                                </td>
                            </tr>
                            <tr>
                                <th>작성자</th>
                                <td>
                                    <input type="text" name="writer" value="몰인몰" class="text_input" style="width:130px" maxlength="20" readOnly />
                                </td>
                            </tr>

                        </table>

                        <div class="btn_center mbt5">
                            <button type="button" class="btn btn-info" onClick="validSubmit()">확인</button>
                        </div>

                    </form>

                </div>









            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    //<![CDATA[
    function validSubmit() {
        var f = document.Frm;

        if (f.subject && sws.common.isEmpty(f.subject)) {
            alert("제목을 입력해주세요.");
            f.subject.focus();
            return false;
        }

        if (sws.common.isEmpty(f.content)) {
            alert("내용을 입력해주세요.");
            f.content.focus();
            return false;
        }

        if (f.imgReview && !isEmpty(f.imgReview)) {
            if (!checkFileExt(f.imgReview, "gif,jpg,png", "이미지(GIF, JPG, PNG) 파일만 선택해 주세요.")) return false;
        }

        if (sws.common.isEmpty(f.writer)) {
            alert("작성자를 입력해주세요.");
            f.writer.focus();
            return false;
        }

        if (confirm("등록하시겠습니까?")) {
            f.action = "review.act.asp";
            f.submit();
        }
    }
    //]]>
</script>
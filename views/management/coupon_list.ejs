                <%- include('../inc/footer') %>
                    <script type="text/javascript">
                        //<![CDATA[
                        function reg(idx) {
                            var f = document.Frm;
                            var code;

                            switch (f.kind.value) {
                                case '100':
                                    code = 'goods';
                                    break;
                                case '200':
                                    code = 'cart';
                                    break;
                                case '300':
                                    code = 'delivery';
                                    break;
                            }
                            location.href = "coupon_" + code + "_reg.asp" + (idx ? "?idx=" + idx + "&params=kind=100^smethod=^page=" : '');
                        }

                        function delList() {
                            var f = document.Frm;
                            var items = "";

                            if (!f.cbList) return false;

                            if (typeof(f.cbList.length) == "undefined") {
                                if (f.cbList.checked) items = f.cbList.value;
                            } else {
                                for (var i = 0; i < f.cbList.length; i++) {
                                    if (f.cbList[i].checked) {
                                        items += (items ? "," : "") + f.cbList[i].value;
                                    }
                                }
                            }

                            if (items == "") {
                                alert("삭제할 항목을 선택해 주세요.");
                                return false;
                            }

                            var msg = "쿠폰을 삭제하면 모든 내역이 삭제됩니다.\n" +
                                "회원에게 지급된 사용/미사용 쿠폰 내역도 함께 삭제됩니다.\n\n" +
                                "삭제하시겠습니까?";
                            if (confirm(msg)) {
                                f.mode.value = "DEL";
                                f.idx.value = items;
                                f.encoding = "multipart/form-data";
                                f.action = "coupon.act.asp";
                                f.submit();
                            }
                        }

                        function openIssueList(idx) {
                            $.laybox({
                                type: 'iframe',
                                source: 'coupon_issue_list.ifrm?idx=' + idx
                            });
                        }
                        //]]>
                    </script>


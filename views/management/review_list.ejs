                    <script type="text/javascript">
                        //<![CDATA[
                        function delReview(idx) {
                            var f = document.Frm;

                            if (confirm("상품평을 삭제하시겠습니까?")) {
                                f.mode.value = "DEL";
                                f.idx.value = idx;
                                f.params.value = "skey=^sword=^page=";
                                f.method = "post";
                                f.encoding = "multipart/form-data";
                                f.action = "review.act";
                                f.submit();
                            }
                        }

                        function delAnswer(idx, aidx) {
                            var f = document.Frm;

                            if (confirm("답변을 삭제하시겠습니까?")) {
                                f.mode.value = "DEL_ANSWER";
                                f.idx.value = idx;
                                f.aidx.value = aidx;
                                f.params.value = "skey=^sword=^page=";
                                f.method = "post";
                                f.encoding = "multipart/form-data";
                                f.action = "review.act.asp";
                                f.submit();
                            }
                        }

                        function editReview(idx) {
                            $.laybox({
                                type: 'iframe',
                                width: 800,
                                height: 270,
                                source: 'review_reg.ifrm?idx=' + idx
                            });
                        }

                        function regAnswer(idx) {
                            $.laybox({
                                type: 'iframe',
                                width: 800,
                                height: 200,
                                source: 'review_reg.ifrm?mode=ANSWER&idx=' + idx
                            });
                        }

                        $(function() {
                            $('.adjust_image_container').adjustImage();
                        });
                        //]]>
                    </script>

                    </body>

                    </html>
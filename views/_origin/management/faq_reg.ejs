<%- include('../inc/head') %>

    <div id="container">

        <%- include('../inc/sidebar') %>

            <div id="contents">
                <h3>FAQ관리</h3>
                <ul class="navi">
                    <li class="home"><a href="/" target="_top">홈</a></li>
                    <li>운영관리</li>
                    <li>고객운영관리</li>
                    <li class="on">FAQ관리</li>
                </ul>
                <ul class="helpbox">
                    <li>FAQ를 관리하실 수 있습니다.</li>
                </ul>



                <form name="Frm" method="post" action="/management/faq.act">
                    <input type="hidden" name="mode" value="REG">
                    <input type="hidden" name="idx" value="0">
                    <input type="hidden" name="params" value="">

                    <table border="0" cellpadding="0" cellspacing="0" width="100%" class="t_form">
                        <caption>FAQ 등록 폼</caption>
                        <colgroup>
                            <col width="130">
                            <col width="*">
                        </colgroup>
                        <tbody>
                            <tr>
                                <th>분류</th>
                                <td>
                                    <select id="consult" name="consult"><option value="">선택</option><option value="01">아이디/비밀번호찾기</option><option value="02">회원정보</option><option value="03">배송관련</option><option value="04">상품문의</option><option value="05">반품/교환/취소/환불</option><option value="06">주문결제</option><option value="07">적립금/쿠폰</option></select>
                                </td>
                            </tr>
                            <tr>
                                <th>제목</th>
                                <td>
                                    <input name="subject" value="" class="text_input" maxlength="50" style="width:98%">
                                </td>
                            </tr>
                            <tr>
                                <th>내용</th>
                                <td align="center" style="padding:0">
                                    <textarea name="content" style="width: 100%; height: 300px; display: none;" id="content-placeholder"></textarea><iframe id="__se2_frame_content-placeholder" name="__se2_frame_content-placeholder" frameborder="0" scrolling="no"
                                        style="width: 100%; height: 347px;" src="/js/SmartEditor2Skin.html"></iframe>

                                </td>
                            </tr>
                            <tr>
                                <th>TOP10</th>
                                <td>
                                    <input type="checkbox" name="top10" value="1"> TOP10 FAQ로 설정
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="btn">
                        <span class="button large black"><button type="button" onclick="validSubmit()">확인</button></span>
                        <span class="button large black"><button type="button" onclick="cancel()">취소</button></span>
                    </div>

                </form>





                <%- include('../inc/footer') %>
                    <!-- 에디터 Script -->
                    <script type="text/javascript" src="/js/HuskyEZCreator.js"></script>
                    <script type="text/javascript">
                        //<![CDATA[
                        nhn.husky.EZCreator.createInIFrame({
                            elPlaceHolder: 'content'
                        });
                        //]]>
                    </script>
                    <script type="text/javascript">
                        //<![CDATA[
                        function validSubmit() {
                            var f = document.Frm

                            if (isEmpty(f.consult)) {
                                alert("분류를 선택해 주세요.");
                                f.consult.focus();
                                return false;
                            }

                            if (isEmpty(f.subject)) {
                                alert("제목을 입력해 주세요.");
                                f.subject.focus();
                                return false;
                            }

                            if (isEmpty(f.content)) {
                                alert("내용을 입력해 주세요.");
                                return false;
                            }

                            if (confirm("등록하시겠습니까?")) {
                                f.submit();
                            }
                        }

                        function cancel() {
                            location.href = "faq_list";
                        }
                        //]]>
                    </script>

                    </body>

                    </html>
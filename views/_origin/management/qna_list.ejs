                        function delQuestion(idx) {
                            var f = document.Frm;

                            if (confirm("Q&A를 삭제하시겠습니까?")) {
                                f.mode.value = "DEL";
                                f.idx.value = idx;
                                f.method = "post";
                                f.action = "qna.act.asp";
                                f.submit();
                            }
                        }

                        function delAnswer(idx, aidx) {
                            var f = document.Frm;

                            if (confirm("답변을 삭제하시겠습니까?")) {
                                f.mode.value = "DEL_ANSWER";
                                f.idx.value = idx;
                                f.aidx.value = aidx;
                                f.method = "post";
                                f.action = "qna.act.asp";
                                f.submit();
                            }
                        }

                        function editQuestion(idx) {
                            $.laybox({
                                type: 'iframe',
                                width: 800,
                                height: 250,
                                source: 'qna_reg.ifrm.asp?idx=' + idx
                            });

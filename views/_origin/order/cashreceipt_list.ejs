                        }

                        function validSearch(f) {
                            if (!isDate(f.sdts.value)) f.sdts.value = "";
                            if (!isDate(f.sdte.value)) f.sdte.value = "";
                        }

                        function openOrderDetail(idx) { // 주문정보 상세보기
